        include menubox
        // lightbox
        block lightbox
            .popup(style="display:none")
                .content
                    .inner
                        p 請填寫統一編號
                        a.btn-blue(href="#")
                            span.main 確定
        // content
        .wrap
            .openingLogo(style="display:none")
                .inner
                    .partner(style="display:none")
                        +svg('fin-w-comp')
                    .ttBox
                        .tt
                            +svg('tt')
                    .cover
            // add "dark"
            .fixed-element
                .scroll
                    span scroll
                    .arrowBox-scroll
                        span.arrow.arrow-first
                        span.arrow.arrow-second
                .page
                    ul
                        li 1
                        li.midLine 
                        li 5
            block content
