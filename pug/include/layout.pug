        // header
        // add ".scrolled" when scrolling
        header
            .inner
                .logoBox
                    a.logo(href="index.html") 
                        img(src="../asset/svg/logo-w.svg", alt="logo")
                    a.life-logo(href="#")
                        img(src="../asset/svg/life-logo-w.svg", alt="life-logo")
                
                .navBox
                    .count
                        .icon
                            +svg('flag')
                        p 目前共
                            span 666,666
